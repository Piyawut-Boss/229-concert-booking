# Production Environment Configuration
# Use this file for production deployment

PORT=5000
NODE_ENV=production

# PostgreSQL Production Connection
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://concert_user:your_secure_password@postgres-service:5432/concert_ticket_system

# Database Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE=30000
DB_CONNECTION_TIMEOUT=2000
DB_STATEMENT_TIMEOUT=120000

# SSL/TLS Configuration (optional, use for managed services like AWS RDS, Heroku)
# DATABASE_SSL_CA=/path/to/ca-certificate.pem
# DATABASE_SSL_CERT=/path/to/client-cert.pem
# DATABASE_SSL_KEY=/path/to/client-key.pem

# Seed initial data on startup (set to 'false' after first deployment)
SEED_DATABASE=false

# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Email Configuration (use environment-specific credentials)
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Email Notification Flags
SEND_LOGIN_EMAIL=true
SEND_BOOKING_EMAIL=true

# Security
JWT_SECRET=your-very-secure-jwt-secret-key-here
SESSION_SECRET=your-very-secure-session-secret-key-here

# Logging
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Health Check
HEALTH_CHECK_INTERVAL=60000
