# Railway Environment Variables

# ============ Server Configuration ============
NODE_ENV=production
PORT=8080

# ============ Database Configuration ============
DATABASE_URL=postgresql://user:password@localhost:5432/concert_ticket_system
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE=30000
DB_CONNECTION_TIMEOUT=2000
DB_STATEMENT_TIMEOUT=120000

# ============ Google OAuth ============
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============ Email Configuration ============
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@concerttickets.com

# ============ Redis Configuration (Optional for Pub/Sub) ============
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============ Application URLs ============
FRONTEND_URL=https://your-railway-frontend.railway.app
BACKEND_URL=https://your-railway-backend.railway.app

# ============ Cloudflare Turnstile (Optional) ============
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
TURNSTILE_SITE_KEY=your_turnstile_site_key

# ============ Session Configuration ============
SESSION_SECRET=your_random_session_secret_key_change_this

# ============ API Rate Limiting ============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============ Logging ============
LOG_LEVEL=info
